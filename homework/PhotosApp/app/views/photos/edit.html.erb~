<h1>Edit photo <%= params[:id] %> here<h1>

<%= form_tag("/photos/" + params[:id], :method => :put) do%>
	<p>
		<%= label_tag "Title" %>
		<%= text_field_tag "title", @photo.title %>
	</p>
	<p>
		<%= label_tag "Image URL" %>
		<%= text_field_tag "url", @photo.url %>
	</p>
	<p>
		<%= label_tag "Caption" %>
		<%= text_field_tag "caption", @photo.caption %>
	</p>
	<%= submit_tag %>
<% end %>


<%= link_to "Back", photos_path(params[:id]) %>
<%= link_to "Home", photos_path %>
<%= link_to("Destroy this photo", photo_path(params[:id]), :method => :delete, :confirm => "Are you sure you wish to delete this photo?") %>
